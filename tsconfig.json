{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "module": "nodenext",
    "target": "es2022",
    "moduleResolution": "node16",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "removeComments": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "types": ["vitest/globals", "vitest", "node"]
  },
  "include": ["./src/**/*.ts", "src/core/user/application/use-cases/verify-email.use-casets", "src/core/user/application/use-cases/create-user/create-user.use-casets"],
  "exclude": ["node_modules", "dist"]
}